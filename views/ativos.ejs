    <main>
        <div class="main-content">
            <div class="server-erros">
                <p>VocÃª precisa ter pelo menos 1 Ativo Cadastrado</p>
            </div>
            <div class="body-main">
                <form method="post" action="ativos/post" id="form-post">
                    <div class="input-field">
                        <label for="nome-empresa">Nome da Empresa:</label>
                        <input type="text" placeholder="digite o nome da empresa" name="nome_empresa" id="nome-empresa" />
                    </div>
                    <div class="input-field">
                        <label for="cnpj-empresa">CNPJ da Empresa:</label>
                        <input type="text" placeholder="digite o CNPJ da empresa" maxlength="18" name="cnpj_empresa" id="cnpj-empresa" />
                    </div>
                    <div class="input-field">
                        <label for="codigo-ativo">Codigo do Ativo:</label>
                        <input type="text" placeholder="digite o codigo do ativo" name="codigo_ativo" id="codigo-ativo" />
                    </div>
                    <div class="button-field">
                        <button>Adicionar</button>
                    </div>
                </form>
            </div>
            <div class="form-erros">
                <p id="erro-msg"></p>
            </div>
        </div>
    </main>
    <script src="scripts/ativos.js"></script>

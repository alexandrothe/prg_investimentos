<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/update.css">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="update-field">
            <div class="put-form">
                <div class="input-field">
                    <div class="put-form-item">
                        <label for="data-put">Data:</label>
                        <input type="text" id="data-put" name="data">
                    </div>
        
                    <div class="put-form-item">
                        <label for="codigo-put">Código:</label>
                        <select id="codigo-put" name="codigo">
                            <option value="MGLU3">MGLU3</option>
                        </select>
                    </div>
        
                    <div class="put-form-item">
                        <label for="quantidade-put">Quantidade:</label>
                        <input type="number" id="quantidade-put" name="quantidade">
                    </div>
        
                    <div class="put-form-item">
                        <label for="valor-unitario-put">Valor Unitário:</label>
                        <input type="text" id="valor-unitario-put" name="valor_unitario">
                    </div>
        
                    <div class="put-form-item">
                        <label for="compra-venda-put">Compra/Venda:</label>
                        <select id="compra-venda-put" name="compra_venda">
                            <option value="c">Compra</option>
                            <option value="v">Venda</option>
                        </select>
                    </div>
        
                    <div class="put-form-item">
                        <label for="taxa-corretagem-put">Taxa Corretagem:</label>
                        <input type="text" id="taxa-corretagem-put" name="taxa_corretagem">
                    </div>
                </div>
                <div class="button-field">
                    <button id="voltar-btn">Voltar</button>
                    <button id="put-form-btn">Adicionar</button>
                </div>
            </div>
            <div class="form-error">
                <p id="erro-msg"></p>
            </div>
        </div>
    </div>
    <script src="scripts/update.js"></script>
</body>
</html>